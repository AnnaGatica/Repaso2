//Alternativa Condicional

let numeroo1= '30'
let numeroo2= '10'

if (numeroo1>numeroo2) {
    alert(numeroo1 + '  Es mayor')
}else{
    alert(numeroo1 + ' Es mayor')
}

if (numeroo2>numeroo1) {
    alert(numeroo2 + ' Es mayor')
}else{
    alert(numeroo2 + ' Es menor')
}

if (numeroo1 = numeroo2) {
    alert('Ambos numeros son iguales')
}else{
    alert('Los dos numeros son diferentes')
}


//Punto dos del apartado "Alt. Condicional"

let numero= '4'

if (numero % 4 === 0 ) {
    alert( numero + ' El numero es par')
} else {
   alert(numero + ' El numero no es par')
}

//Punto tres del apartado "Alternativa Condicional"

let nota= '60'

if (nota >= 90) {
    console.log("A");
} 

if (nota >= 80) {
    console.log("B");
} 
if (nota >= 70) {
    console.log("C");
}

if (nota >= 60) {
    console.log("D");
} else {
    console.log("F");
}
